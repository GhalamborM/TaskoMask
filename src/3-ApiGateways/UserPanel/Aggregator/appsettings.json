{
  "AllowedHosts": "*",
  "RabbitMQ": {
    "Host": "localhost",
    "ExchangeName": "aggregator",
    "UserName": "guest",
    "Password": "guest"
  },
  "Url": {
    "Owner-Read-Service": "https://localhost:5021",
    "Board-Read-Service": "https://localhost:5025",
    "Task-Read-Service": "https://localhost:5029"
  },
  "Metric": {
    "StandAloneKestrelServerEnabled": false,
    "Port": 5003,
    "Url": "/metrics",
    "Hostname": "+",
    "HttpMetricsEnabled": true,
    "SuppressDefaultMetrics": false
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  },
  "Jwt": {
    "Authority": "https://identity.taskomask.ir",
    "Audience": "aggregator.api",
    "Policies": [
      {
        "Name": "user-read-access",
        "RequireAuthenticatedUser": true,
        "AllowedScopes": [ "owners.read", "boards.read", "tasks.read" ]
      }
    ]
  },
  "Swagger": {
    "Title": "TaskoMask UserPanel ApiGateway Aggregator Api Documentation",
    "Version": "v1"
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./bin/logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
