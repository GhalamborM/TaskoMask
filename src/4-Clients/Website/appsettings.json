{
  "AllowedHosts": "*",
  "Url": {
    "Website": "http://taskomask.ir",
    "UserPanel": "http://panel.taskomask.ir",
    "UserPanelApiGateway": "http://api.taskomask.ir",
    "IdentityServer": "https://identity.taskomask.ir"
  },
  "OpenTelemetry": {
    "ServiceName": "TaskoMask",
    "ExportMetrics": true,
    "MetricsEndpoint": "http://localhost:4317",
    "ExportTracing": true,
    "TracingEndpoint": "http://localhost:4317",
    "ExportLogging": false,
    "LoggingEndpoint": "http://localhost:4317"
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./bin/logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
